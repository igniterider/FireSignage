<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireSignage.MainPage"
             xmlns:model="clr-namespace:FireSignage.Models"
             xmlns:fontAwesome="clr-namespace:FontAwesome"
             Title="{Binding Title}"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:FireSignage.Viewmodels"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="True"
             xmlns:local="clr-namespace:FireSignage"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI">


    <ContentPage.BindingContext>
        <viewmodel:MainPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>

      <skia:SKLottieView
                Source="logo1.json"
                RepeatCount="1"
                HeightRequest="75"
                HorizontalOptions="Center"
                Margin="5"/>
      
        <Label Text="Welcome to Display Signs by Ignite Rider Inc" HorizontalOptions="Center" LineBreakMode="WordWrap"
               FontSize="Large" HorizontalTextAlignment="Center" TextColor="White"/>

        <Label Text="Turn any device into a digital sign" 
               HorizontalOptions="Center" LineBreakMode="WordWrap"
               FontSize="Large" HorizontalTextAlignment="Center" TextColor="White"/>

        <Image Source="home1.png" HorizontalOptions="Center"/>

        <HorizontalStackLayout Margin="5">
            <Button Text="See All Signs" Style="{StaticResource GradientButtonStyle2}" Command="{Binding NavigateCommand}" />
            <Button Text="Create A New Sign" Style="{StaticResource GradientButtonStyle}" />
            <Button Text="See Dashboards" Style="{StaticResource GradientButtonStyle}" Command="{Binding NavigateCommand}"
                    CommandParameter="//GigDashBoard"/>


        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="10">

            <Button Text="Settings" Style="{StaticResource GradientButtonStyle}" />
            <Button Text="Devices" Style="{StaticResource GradientButtonStyle2}" />
            <Button Text="Get Help" Style="{StaticResource GradientButtonStyle}" />

        </HorizontalStackLayout>
        
    </VerticalStackLayout>
</ContentPage>
