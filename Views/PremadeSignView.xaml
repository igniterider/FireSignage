                    <Label VerticalOptions="Center" FontSize="30" Text="{Binding Displaytext2}" TextColor="Red" HorizontalTextAlignment="Center" />

                </VerticalStackLayout>

                </Frame>
            </Grid>
        </DataTemplate>
    </CollectionView.ItemTemplate>

       
</CollectionView>-->

   
</Grid>

</VerticalStackLayout>
</ContentPage>

        

        
        
