<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireSignage.Views.Settings.UserSettings"
             Title="UserSettings"
             xmlns:tabView="http://schemas.syncfusion.com/maui"
             xmlns:viewModel="clr-namespace:FireSignage.Viewmodels"
             xmlns:controls="clr-namespace:FireSignage.Controls"
             Shell.TabBarIsVisible="True">


     <ContentPage.BindingContext>
        <viewModel:UserSettingsViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="Please fill out all required information"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Frame BackgroundColor="#4D687E" HasShadow="True" >
        <tabView:SfTabView x:Name="tabView" Margin="10"
                           Padding="10">



            <tabView:SfTabView.Items>
               



                <tabView:SfTabItem Header="PERSONAL INFO" TextColor="White">
                    <tabView:SfTabItem.Content>
                        <VerticalStackLayout>
                        <TableView Intent="Form" HorizontalOptions="Center"
                                   VerticalOptions="CenterAndExpand">
                        <TableRoot>
                            <TableSection Title="Personal Information">
                                <EntryCell Label="First Name"
                                           Placeholder="firstname"
                                           x:Name="fname"
                                           Text="{Binding FName}"/>

                                <EntryCell Label="Last Name"
                                           Placeholder="lastname"
                                           Text="{Binding LName}"/>

                                <EntryCell Label="License Plate #"
                                           Placeholder="plate #"
                                           x:Name="licplate"
                                           Text="{Binding LicPlate}"/>

                                <EntryCell Label="Email"
                                           Placeholder="email"
                                           Text="{Binding Email}"/>
                                <EntryCell Label="Password"
                                           Placeholder="password"
                                           Text="{Binding Password}"/>
                            </TableSection>

                            <TableSection Title="Device Information">
                                
                                



                            </TableSection>

                        </TableRoot>


                        </TableView>

                        <HorizontalStackLayout>

                                    <Button BackgroundColor="Yellow" />
                                    <Button BackgroundColor="Yellow" />
                                    <Button BackgroundColor="Yellow" />

                                </HorizontalStackLayout>

                         <Button Text="Submit" Style="{StaticResource GradientButtonStyle}" FontSize="25"
                                 Padding="5" Margin="0,10,0,0" WidthRequest="245"
                                 Command="{Binding SignUpCommand}"/>


                        </VerticalStackLayout>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>

               
            </tabView:SfTabView.Items>
        </tabView:SfTabView>

    </Frame>

        <Label Text="All information is stored securely and never shared. Some info is used only for making signs easier and quicker to use!" FontAttributes="Bold"
               FontSize="15" HorizontalOptions="CenterAndExpand" LineBreakMode="WordWrap" Margin="15,20,5,15"/>

 

    </VerticalStackLayout>
</ContentPage>
