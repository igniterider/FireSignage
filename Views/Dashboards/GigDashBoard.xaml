<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireSignage.Views.Dashboards.GigDashBoard"
             xmlns:model="clr-namespace:FireSignage.Models"
             xmlns:fontAwesome="clr-namespace:FontAwesome"
             Title="{Binding Title}"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:FireSignage.Viewmodels"
             Shell.TabBarIsVisible="False"
             xmlns:ListView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:data="clr-namespace:Syncfusion.Maui.DataSource;assembly=Syncfusion.Maui.DataSource"
             xmlns:local="clr-namespace:FireSignage"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            >
    
    

    <ContentPage.BindingContext>
        <viewmodel:PremadeViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
        EventName="Appearing"
        Command="{Binding GetSignsCommand}" />

    </ContentPage.Behaviors>
            <VerticalStackLayout>
                
            <HorizontalStackLayout Margin="10" Spacing="20">

                <Label Text="WHAT'S PLAYING"
                   HorizontalOptions="Center" 
                   FontAttributes="Bold" Margin="50,5"/>

            <Picker Title="Select Device" FontAttributes="Bold"
                        HorizontalOptions="EndAndExpand" />

            </HorizontalStackLayout>

           

            <Label HeightRequest="150" WidthRequest="400" BackgroundColor="Black" HorizontalOptions="Center"/>

       
            <Label Text="Editing Sign" HorizontalOptions="Center" />

       

              <mct:Expander Direction="Down" HorizontalOptions="Center">
                <mct:Expander.Header>
                  <Frame BorderColor="DarkRed" >
                    <Label Text="+/-" FontAttributes="Bold" FontSize="Medium" 
                           HorizontalTextAlignment="Center" HorizontalOptions="Center"
                           TextColor="Black"/>
                  </Frame>

                </mct:Expander.Header>
                <mct:Expander.Content>
                  <Label HeightRequest="150" WidthRequest="400" BackgroundColor="Black" HorizontalOptions="Center"/>
                </mct:Expander.Content>


              </mct:Expander>

           

        <HorizontalStackLayout Margin="5" Spacing="20">
            <Label Text="Change Riders Name Only" HorizontalOptions="Start"/>

            <Entry FontSize="Small" 
                   FontAttributes="Bold" Placeholder="Enter Name " 
                   HorizontalOptions="CenterAndExpand"/>

        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="5" Spacing="10">
            <VerticalStackLayout>
                <Label Text="Text Size"/>
                <Stepper x:Name="stepper1" HeightRequest="50" WidthRequest="100" />
            </VerticalStackLayout>

           
                <Picker HorizontalOptions="Center"
                        Title="Text Color"
                        SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                        ItemsSource="{Binding MyColors}"
                        TitleColor="{Binding SelectedItem}" />

                <Picker HorizontalOptions="Center"
                        Title="Background Color"
                        SelectedItem="{Binding SelectedBackItem, Mode=TwoWay}"
                        ItemsSource="{Binding MyColors}"
                        TitleColor="{Binding SelectedBackItem}" />
                
           


        </HorizontalStackLayout>
            




            <CollectionView ItemsLayout="HorizontalList" ItemsSource="{Binding GetSigns}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:PreMadeSigns">
                        <Grid Padding="10">
                            <Frame HeightRequest="100" WidthRequest="200" Style="{StaticResource CardView}">

                                <VerticalStackLayout Padding="10">

                                    <Label VerticalOptions="Center" FontSize="30" Text="{Binding Displaytext}" TextColor="White" HorizontalTextAlignment="Center"/>
                                    <Label VerticalOptions="Center" FontSize="30" Text="{Binding Displaytext2}" TextColor="White" HorizontalTextAlignment="Center" />

                                </VerticalStackLayout>

                            </Frame>
                        </Grid>

                    </DataTemplate>
                    
                </CollectionView.ItemTemplate>
                
            </CollectionView>



            </VerticalStackLayout>
</ContentPage>