<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireSignage.Views.SignDisplay.DisplayTest"
             Title="DisplayTest"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:FireSignage.Viewmodels"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:renderer="clr-namespace:FireSignage.Renderers"
             xmlns:controls="clr-namespace:FireSignage.Controls">


    <ContentPage.BindingContext>
        <viewmodel:DeviceSignViewModel/>
    </ContentPage.BindingContext>
    
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <renderer:SignControlRenderer x:Key="SignControlRenderer"/>
            
        </ResourceDictionary>
        
    </ContentPage.Resources>

    <VerticalStackLayout>

        <!--<GraphicsView Drawable="{StaticResource drawable}"
                       />-->


        <controls:SKRenderView Renderer="{Binding Renderer}"
                          x:Name="skiaView" VerticalOptions="FillAndExpand" HeightRequest="400" BackgroundColor="Black" />


    </VerticalStackLayout>
</ContentPage>